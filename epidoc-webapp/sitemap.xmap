<?xml version="1.0" encoding="UTF-8"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
   <!-- epidoc webapp sitemap for the root of the epidoc-webapp subtree -->
   <map:pipelines>
      <map:pipeline>
         <!-- provide hooks for developers who need to set up a working directory outside the cocoon hierarchy -->
         <!-- see the webapp readme file for advice on how to do this. -->
         <map:match pattern="work/**">
            <map:mount check-reload="yes" src="../" uri-prefix="work"/>
         </map:match>
         <!-- look for anything else in subordinate directories -->
         <map:match pattern="*/**">
            <map:mount check-reload="yes" src="{1}/" uri-prefix="{1}" />
         </map:match>
      </map:pipeline>
   </map:pipelines>
</map:sitemap>
