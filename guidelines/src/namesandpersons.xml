            <item id="EncEx-1">
                <persName full="yes">Antonius Tatianus</persName>
            </item>
            <item id="EncEx-2">
                <persName reg="Ἀσκληπίοδοτος, Τίτος Ὄππιος" key="OppAsclep" full="yes">Τ.
                    Ἀσκληπίοδοτον</persName>
            </item>
