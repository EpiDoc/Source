         <item>
            <placeName full="yes" key="BATLAS-04302-226">Roma</placeName>
         </item>
         <item>
            <placeName reg="Λαοδικεία" key="Laodikeia-Lykos"
            >Λαοδικήα</placeName>
         </item>
      </list>
   </div>
