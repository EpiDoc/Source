<?oxygen NVDLSchema="../schema/epidoc.nvdl"?>

<div xmlns="http://www.tei-c.org/ns/1.0" xml:id="trans-parallelcopy" xml:lang="en">
    <head>Parallel Text</head>
    <p>Text restored from parallel copy</p>
    <p><specList>
            <specDesc key="supplied"/>
        </specList>
        <!--<listRef>
            <ptr target="a"/>
            </listRef>--></p>

    <p>Where text is restored by the editor from a parallel copy, this should be indicated by using
        the usual <gi>supplied</gi> tag, but with an <att>evidence</att> with a value of
        "parallel".</p>

    <cit>
        <quote>[abc]</quote>
        <bibl corresp="#panciera">
            <biblScope>VIII.1</biblScope>
        </bibl>
        <bibl corresp="#ddbdp"/>
        <!-- etc. -->
    </cit>

    <egXML xmlns="http://www.tei-c.org/ns/Examples" corresp="#panciera">
        <supplied reason="undefined" evidence="parallel">abc</supplied>
    </egXML>

    <egXML xmlns="http://www.tei-c.org/ns/Examples" rend="ddbdp" corresp="http://papyri.info/ddbdp/bgu;13;2216#4">
        <supplied evidence="parallel" reason="undefined">ς ἐπιστολῆς Θεοδώρου</supplied>
    </egXML>
    
    <!-- No IRT or iAph examples -->

    <div xml:id="trans-parallelcopy-responsibility">

        <head>Responsibility for this section</head>
        <listBibl>
            <bibl><respStmt>
                    <resp>author</resp>
                    <name>Scott Vanderbilt</name>
                    <name/>
                </respStmt></bibl>
            <bibl><respStmt>
                    <resp>author</resp>
                    <name>Charlotte Tupman</name>
                    <name/>
                </respStmt></bibl>
        </listBibl>
    </div>
</div>
